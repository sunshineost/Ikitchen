<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="study.wp.ikitchen.activity.RegisterActivity">

    <include layout="@layout/head_actionbar_universal" />

    <LinearLayout
        android:id="@+id/first_step_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/dimen_16"
        >
        <EditText
            android:id="@+id/mobile_et"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/username"
            android:background="@drawable/bg_login_edit"
            android:hint="请输入你的手机号"
            android:textColorHint="@color/hint"/>
        <Button
            android:id="@+id/to_second_bt"
            android:layout_marginTop="40dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="下  一  步"
            android:textColor="#ffffff"
            android:background="@drawable/bg_btn_red_radius"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_step_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/dimen_16"
        android:visibility="gone"
    >
        <TextView
            android:id="@+id/mobile_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="10dp"
            android:textSize="30sp"
            android:text="15869180337"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_16">
            <EditText
                android:id="@+id/vc_et"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:layout_margin="@dimen/dimen_5"
                android:drawablePadding="10dp"
                android:background="@drawable/bg_login_edit"
                android:hint="请输入验证码"
                android:textColorHint="@color/hint"/>
            <Button
                android:id="@+id/getvc_bt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="@dimen/dimen_5"
                android:text="获取验证码"
                android:textColor="#ffffff"
                android:background="@drawable/bg_btn_red_radius"/>
         </LinearLayout>

        <Button
            android:id="@+id/tothree_bt"
            android:layout_marginTop="40dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="下  一  步"
            android:textColor="#ffffff"
            android:background="@drawable/bg_btn_red_radius"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_step_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16"
        android:visibility="gone">
        <TextView
            android:id="@+id/mobile2_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:textSize="30sp"
            android:text="15869180337"
            android:gravity="center"/>
        <EditText
            android:id="@+id/nicname_et"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/username"
            android:background="@drawable/bg_login_edit"
            android:hint="请填写昵称"
            android:textColorHint="@color/hint"/>
        <EditText
            android:id="@+id/password_et"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/password"
            android:background="@drawable/bg_login_edit"
            android:hint="请填写密码"
            android:textColorHint="@color/hint"/>
        <EditText
            android:id="@+id/check_password_et"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/password"
            android:background="@drawable/bg_login_edit"
            android:hint="确认密码"
            android:textColorHint="@color/hint"/>
        <Button
            android:id="@+id/register_bt"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="注          册"
            android:textColor="#ffffff"
            android:background="@drawable/bg_btn_red_radius"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forth_step_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16"
        android:gravity="center"
        android:visibility="gone">
        <TextView
            android:id="@+id/message_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_marginTop="30dp"
            android:drawablePadding="10dp"
            android:textSize="25sp"
            android:text="恭喜你成功注册爱下厨！"/>
        <Button
            android:id="@+id/to_complete_bt"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="完  善  信  息"
            android:textColor="#ffffff"
            android:background="@drawable/bg_btn_red_radius"/>
        <Button
            android:id="@+id/to_menmber_bt"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="用  户  中  心"
            android:background="@drawable/bg_btn_grey_radius"/>
    </LinearLayout>


</LinearLayout>
